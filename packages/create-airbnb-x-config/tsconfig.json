{
  "extends": "../../tsconfig.json",
  "ts-node": {
    "transpileOnly": true,
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "composite": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.mjs", "**/*.mts", "package.json"],
  "exclude": ["node_modules", "dist"]
}
